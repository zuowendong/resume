---
import "../assets/iconfont.css";

import Layout from "../layouts/Layout.astro";
import { SelfEvaluation } from "../components/SelfEvaluation";
import { WorkTemplate } from "../components/WorkTemplate";
import { infoConfig } from "../../info.config";

const baseInfo = [
	{ label: infoConfig.phoneNum, icon: "iconfont icon-phone" },
	{ label: infoConfig.email, icon: "iconfont icon-email" },
	{ label: infoConfig.address, icon: "iconfont icon-address" },
];
---

<Layout title="Welcome to Astro.">
	<div class="mt-6 max-w-screen-lg md:flex mx-auto">
		<div class="md:w-1/3 p-2 relative">
			<div class="md:fixed">
				<div class="md:block">
					<div class="flex justify-center">
						<img class="h-32 w-32 rounded-full mx-auto" src={infoConfig.avatars} />
					</div>
					<div class="mb-12 text-center mt-4 justify-center items-center">
						<h1 class="text-2xl text-gray-800 font-bold">{infoConfig.name}</h1>
						<div class="md:text-lg text-gray-600">{infoConfig.post}</div>
						<div class="md:text-lg text-gray-600">{infoConfig.serviceYear}</div>
						<div class="text-gray-600 md:hidden mt-1">{infoConfig.contact}</div>
					</div>
				</div>
				<div class="mx-4 my-4 hidden md:block">
					{
						baseInfo.map((info) => {
							return (
								<div class="my-5 text-lg text-gray-600 flex">
									<div class="mr-2 ">
										<span class={info.icon} />
									</div>
									<span>{info.label}</span>
								</div>
							);
						})
					}
					<a href={infoConfig.github} class="my-5 flex items-center" target="_blank">
						<div class="mr-2">
							<span class="iconfont icon-github"></span>
						</div>
						<span class="text-blue-500">GitHub</span>
					</a>
				</div>
			</div>
		</div>
		<div class="md:w-2/3 p-2 w-full">
			<div class="mx-4 mb-6">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">Self Evaluation</h2>
				<p class="text-lg">
					<SelfEvaluation />
				</p>
			</div>
			<div class="mx-4">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">Work Experience</h2>
				<WorkTemplate />
			</div>
			<div class="mx-4">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">Skill</h2>
				<ul>
					<li class="mb-6 flex flex-wrap">vue</li>
				</ul>
			</div>
		</div>
	</div>
</Layout>
