---
import "../assets/iconfont.css";

import Layout from "../layouts/Layout.astro";
import { SelfEvaluation } from "../components/SelfEvaluation";
import { WorkTemplate } from "../components/WorkTemplate";
import { ProjectTemplate } from "../components/projectTemplate";
import { infoConfig } from "../../info.config";

const baseInfo = [
	{ label: infoConfig.phoneNum, icon: "text-sky-700 pr-1.5 !text-1xl iconfont icon-dianhua" },
	{ label: infoConfig.email, icon: "text-sky-700 pr-1.5 !text-1xl iconfont icon-youjian" },
];
---

<Layout title="Welcome to My Resume">
	<div class="mt-6 max-w-screen-lg md:flex mx-auto">
		<div class="md:w-1/3 p-2 relative">
			<div class="md:fixed">
				<div class="md:block">
					<div class="flex justify-center">
						<img class="h-32 w-32 rounded-full mx-auto" src={infoConfig.avatars} />
					</div>
					<div class="mb-12 text-center mt-4 justify-center items-center">
						<h1 class="text-4xl text-gray-800 font-bold my-1">{infoConfig.name}</h1>
						<div class="md:text-lg text-gray-600 my-1">{infoConfig.post}</div>
						<div class="md:text-lg text-gray-600 my-1">{infoConfig.serviceYear}</div>
						<div class="text-gray-600 md:hidden mt-1">{infoConfig.phoneNum}</div>
						<div class="text-gray-600 md:hidden mt-1">{infoConfig.email}</div>
					</div>
				</div>
				<div class="mx-4 my-4 hidden md:block">
					{
						baseInfo.map((info) => {
							return (
								<div class="my-5 text-lg text-gray-600 flex items-center">
									<span class={info.icon} />
									<span>{info.label}</span>
								</div>
							);
						})
					}
					<a href={infoConfig.github} class="my-5 flex items-center text-sky-700" target="_blank">
						<div class="mr-2">
							<span class="iconfont icon-github"></span>
						</div>
						<span class="text-blue-500">GitHub</span>
					</a>
				</div>
			</div>
		</div>
		<div class="md:w-2/3 p-2 w-full">
			<div class="mx-4 mb-12">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">{infoConfig.evaluationName}</h2>
				<p class="text-lg">
					<SelfEvaluation />
				</p>
			</div>
			<div class="mx-4 mb-12">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">{infoConfig.experienceName}</h2>
				<WorkTemplate />
			</div>
			<div class="mx-4 mb-12">
				<h2 class="mb-4 text-3xl text-gray-700 font-bold">{infoConfig.projectName}</h2>
				<ProjectTemplate />
			</div>
		</div>
	</div>
</Layout>
